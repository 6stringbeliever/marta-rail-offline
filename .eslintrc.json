{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [1, "single", "avoid-escape"],
    "no-const-assign": [2],
    "no-console": [0],
    "no-undef": [0],
    "no-unused-vars": [1]
  }
}
